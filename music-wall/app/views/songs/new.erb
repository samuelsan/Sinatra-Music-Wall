
<h1>Post a Song!</h1>
<hr/>

<% if @song && @song.errors.any? %>
  <div>
    <strong>Some issues with your song selection, please fix them:</strong>
    <ul>
      <% @song.errors.full_messages.each do |song| %>
        <li><%= song %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form method="post" action="/songs">
  <div>
    <label>Title:</label>
    <input type="text" name="title" value="<%= @song && @song.title %>">
  </div>
  <div>
    <label>Artist:</label>
    <input type="text" name="artist" value="<%= @song && @song.artist %>">
  </div>
  <div>
    <label>URL:</label>
    <input type="url" name="url" value="<%= @song && @song.url %>">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>