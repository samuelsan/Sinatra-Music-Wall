<h1>Log In Here</h1>
<hr/>

<% if @login_error %>
  <div>
    <strong>Some issues with your login, please fix them:</strong>
  </div>
<% end %>


<form method="post" action="/login">
  <div>
    <label>Email:</label>
    <input type="text" name="email"> 
  </div>
  <div>
    <label>Password:</label>
    <input type="text" name="password">
  </div>

  <div>
    <input type="submit" value="Login">
  </div>
</form>

