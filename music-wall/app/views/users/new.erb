<h1>Sign Up Here</h1>
<hr/>

<% if @user.errors.any? %>
  <div>
    <strong>Why you mess up.  Try again.</strong>
  </div>
<% end %>


<form method="post" action="/signup">
  <div>
    <label>Email:</label>
    <input type="text" name="email"> 
  </div>
  <div>
    <label>Password:</label>
    <input type="text" name="password">
  </div>
  
  <div>
    <input type="submit" value="Signup">
  </div>
</form>
